<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo_image"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/logo_text"
        app:tint="@color/colorPrimary"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/logo_text"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintLeft_toRightOf="@id/logo_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo_image"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="www.wanandroid.com"
        android:textColor="#909090"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/logo_text"
        app:layout_constraintRight_toRightOf="@id/logo_text"
        app:layout_constraintTop_toBottomOf="@id/logo_text"
        app:layout_constraintBottom_toBottomOf="@id/logo_image"/>

</android.support.constraint.ConstraintLayout>